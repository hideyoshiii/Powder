<%= render "partial/navbar" %>
<main class="" id="main-collapse">



<div class="text-center">

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">

      
      <h3>Sign up</h3>
      <br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group"> 
          <%= f.email_field :email,class:"form-control",placeholder: "email", autofocus: true %>
        </div>

        <div class="form-group"> 
          <%= f.text_field :nickname,class:"form-control",placeholder: "nickname" %>
        </div>
        <br>

        <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6"> 
          <label>
          <%= f.radio_button :sex, "男" %> 男性 
          </label>
          <label>
          <%= f.radio_button :sex, "女" %> 女性 
          </label>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6"> 
          <%= f.number_field :age, min:0, max:100 %>歳
        </div>
        </div>
        <br>

        <div class="from-group">
          <%= f.password_field :password,:class => 'form-control',:placeholder => 'password', autocomplete: "off" %>
        </div>

        <br>

        <div class="form-group">
          <%= f.password_field :password_confirmation,:class => 'form-control',:placeholder => 'password confirmation',autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up",class:"btn btn-default" %>
        </div>
      <% end %>


      <br><br>
      <%= link_to "facebookでログイン", user_facebook_omniauth_authorize_path, class: "btn btn-facebook" %>

      
    </div>
  </div>
</div>


</main>

<script>
document.addEventListener("DOMContentLoaded", function (event) {
  navbarToggleSidebar();
  navActivePage();
});
</script>

