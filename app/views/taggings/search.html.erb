<%= render "partial/navbar3" %>

<main class="" id="main-collapse">

<div class="row">
<div class="col-xs-12 col-sm-10 col-md-9">

<div class="title-content">
  オススメのタグ
</div> 
<hr class="style1">

<div class="row">
  <div class="col-xs-6 col-sm-4 col-md-3">
    <div class="panel panel-default">
      <%= link_to search_articles_tags_index_path(tag: "サンプル") do %>
        <%= image_tag "hokkaido.jpg", :class =>'img-tag' %>
        <div class="black text-center tag-search">
          <span style="color: #666666;">サンプル</span>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-xs-6 col-sm-4 col-md-3">
    <div class="panel panel-default">
      <%= link_to search_articles_tags_index_path(tag: "ちんすこう") do %>
        <%= image_tag "tokyo.jpg", :class =>'img-tag' %>
        <div class="black text-center tag-search">
          <span style="color:#666666;">ちんすこう</span>
        </div>
      <% end %>
    </div>
  </div>
</div>


<br><br>
<div class="title-content">
  タグ一覧
</div>
<hr class="style1">

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12">
    <% @tags.each do |tag| %>
    <% tag_count = Tagging.where(tag_id: tag.id, context: "movies").count %>
      <%= link_to search_articles_tags_index_path(tag: tag.name) do %>
        <div class="btn btn-default btn-sm tag-btn-btn">
          <i class="fa fa-tag tag-btn" aria-hidden="true"></i><span class="black"><%= tag.name %></span><span style="color: #8899a6;">(<%= tag_count %>)</span>
        </div>
      <% end %>
      &nbsp;
    <% end %>
  </div>
</div>

</div>
</div>

</main>

<script>
document.addEventListener("DOMContentLoaded", function (event) {
  navbarToggleSidebar();
  navActivePage();
});
</script>

