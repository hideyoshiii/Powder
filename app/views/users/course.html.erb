<% if @courses %>
	<% @courses.each do |course| %>
		<% @n = @n + 1 %>
		<%= @n %>,
		<% if course.spot2_id.blank? %>
			<% @spot1 = Spot.find(course.spot1_id) %>
			<%= @spot1.title %>
		<% else %>
			<% @spot1 = Spot.find(course.spot1_id) %>
			<%= @spot1.title %>、
			<% @spot2 = Spot.find(course.spot2_id) %>
			<%= @spot2.title %>
		<% end %>
		<br><br>
	<% end %>
<% else %>
	保存したコースがありません
<% end %>