<%= render "partial/navbar" %>
<main class="" id="main-collapse">

<div class="img-show">
  <%= image_tag @user.image, :class => "img-circle profile-1" %>
  <br>
  <%= @user.nickname %>
  <br>
  <div class="like">
  <% want_count = Like.where(user_id: @user.id, kind: 1).count %>
        <i class="fa fa-gratipay want-btn" aria-hidden="true"></i>&nbsp;<%= want_count %>
        &nbsp;&nbsp;&nbsp;
        <% done_count = Like.where(user_id: @user.id, kind: 2).count %>
        <i class="fa fa-check-circle done-btn" aria-hidden="true"></i>&nbsp;<%= done_count %>
        </div>
        <br>
</div>
<div class="row">
<div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-8">
<div class="panel panel-default">
  <div class="panel-heading like-font-user-show">
  <%= link_to "/users/#{@user.id}/want" do %>
  <div class="black">
  <i class="fa fa-gratipay want-btn" aria-hidden="true"></i>  デートしたい
  <div class="pull-right">
    <i class="fa fa-chevron-right" aria-hidden="true"></i>
  </div>
  </div>
  <% end %>
</div>
<% @wants.each do |want| %>
<% spot = Spot.find_by(id: want.spot_id) %>
<%= link_to spot_path(spot) do %>
<%= image_tag spot.photo.url, :class =>'like-img-user-show' %>
<% end %>
<% end %>
</div>
</div>
</div>

<br>

<div class="row">
<div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-8">
<div class="panel panel-default">
<div class="panel-heading like-font-user-show">
  <%= link_to "/users/#{@user.id}/done" do %>
  <div class="black">
  <i class="fa fa-check-circle done-btn" aria-hidden="true"></i>  デートした
  <div class="pull-right">
    <i class="fa fa-chevron-right" aria-hidden="true"></i>
  </div>
  </div>
  <% end %>
</div>
<% @dones.each do |done| %>
<% spot = Spot.find_by(id: done.spot_id) %>
<%= link_to spot_path(spot) do %>
<%= image_tag spot.photo.url, :class =>'like-img-user-show' %>
<% end %>
<% end %>
</div>
</div>
</div>

<br>

<% if @user == current_user %>
<div class="hero-full-wrapper">
  <div class="grid">
  <div class="gutter-sizer"></div>
    <div class="grid-sizer"></div>
    <% @spots.each do |spot| %>
    <div class="grid-item iii">
      <%= link_to spot_path(spot) do %>
      <%= image_tag spot.photo.url, :class =>'img-responsive' %>
      
      <h4 class="black img-show title-font-index"><%= spot.title %></h4>
       <div class="img-show prefecture-font-index"><span style="color: #CCCCCC;"><i class="fa fa-map-marker" aria-hidden="true"></i><%= spot.prefecture %></span></div>
      
      <div class="like-font-index">
      <% if Like.find_by(user_id: current_user.id, spot_id: spot.id) %>
        <% if Like.find_by(user_id: current_user.id, spot_id: spot.id, kind: 1) %>
          <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6">
          <div class="text-center">
          <%= link_to("/likes/#{spot.id}/destroy1", {method: "post"}) do %>
          <i class="fa fa-gratipay want-btn" aria-hidden="true"></i><span style="color: black;">したい</span>
          <% end %>
          <br>
        <% want_male_count = Like.where(spot_id: spot.id, kind: 1, sex: "男").count %>
        <i class="fa fa-male male" aria-hidden="true"></i>&nbsp;<%= want_male_count %>
        &nbsp;&nbsp;&nbsp;
        <% want_female_count = Like.where(spot_id: spot.id, kind: 1, sex: "女").count %>
        <i class="fa fa-female female" aria-hidden="true"></i>&nbsp;<%= want_female_count %>
          </div>
          </div>
          <div class="col-xs-6 col-ms-6 col-md-6">
