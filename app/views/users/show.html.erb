<%= render "partial/navbar" %>
<main class="" id="main-collapse">

<div class="img-show">
  <%= image_tag @user.image, :class => "img-circle profile-1" %>
  <br>
  <%= @user.nickname %>
  <br>
</div>

<% want_count = Like.where(user_id: @user.id, kind: 1).count %>
<% done_count = Like.where(user_id: @user.id, kind: 2).count %>
<% add_count = Spot.where(user_id: @user.id).count %>


<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading like-font-user-show">
        <%= link_to "/users/#{@user.id}/want" do %>
        <div class="black">
          <i class="fa fa-gratipay want-btn" aria-hidden="true"></i> <%= want_count %> want
            <div class="pull-right">
              <i class="fa fa-chevron-right" aria-hidden="true"></i>
            </div>
        </div>
        <% end %>
      </div>
      <% @wants.each do |want| %>
      <% spot = Spot.find_by(id: want.spot_id) %>
      <%= link_to spot_path(spot) do %>
      <%= image_tag spot.photo.url, :class =>'like-img-user-show' %>
      <% end %>
      <% end %>
    </div>
  </div>
</div>

<br>

<div class="row">
<div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-8">
<div class="panel panel-default">
<div class="panel-heading like-font-user-show">
  <%= link_to "/users/#{@user.id}/done" do %>
  <div class="black">
  <i class="fa fa-check-circle done-btn" aria-hidden="true"></i> <%= done_count %> done
  <div class="pull-right">
    <i class="fa fa-chevron-right" aria-hidden="true"></i>
  </div>
  </div>
  <% end %>
</div>
<% @dones.each do |done| %>
<% spot = Spot.find_by(id: done.spot_id) %>
<%= link_to spot_path(spot) do %>
<%= image_tag spot.photo.url, :class =>'like-img-user-show' %>
<% end %>
<% end %>
</div>
</div>
</div>

<br>

<div class="row">
<div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-8">
<div class="panel panel-default">
<div class="panel-heading like-font-user-show">
  <%= link_to "/users/#{@user.id}/spot" do %>
  <div class="black">
  <i class="fa fa-plus-circle plus-btn" aria-hidden="true"></i> <%= want_count %> add
  <div class="pull-right">
    <i class="fa fa-chevron-right" aria-hidden="true"></i>
  </div>
  </div>
  <% end %>
</div>
<% @spots.each do |spot| %>
<%= link_to spot_path(spot) do %>
<%= image_tag spot.photo.url, :class =>'like-img-user-show' %>
<% end %>
<% end %>
</div>
</div>
</div>

<br>


 
</main>

<script>
document.addEventListener("DOMContentLoaded", function (event) {
  navbarToggleSidebar();
  navActivePage();
});
</script>

