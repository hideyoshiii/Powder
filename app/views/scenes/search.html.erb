<%= render "partial/navbar" %>

<main class="" id="main-collapse">

<br><br>
<div class="row">
<div class="col-xs-12 col-sm-10 col-md-9">
  
<div class="title-content">
  シーンを絞る
</div>
<hr class="style1">

<div class="scene-check">
  <%= form_tag(search_scenes_index_path, method: :get) do %>
  <% ["記念日・誕生日", "サプライズ", "初デート", "お家デート", "アウトドア", "雨の日", "ドライブ"].each do |scene| %>
      <label>
        <%= check_box_tag 'sample_form[scenes][]', scene,nil %>
        <%= scene %>&nbsp;&nbsp;&nbsp;
      </label>
    <% end %>
    <hr>
    <% ["ショッピング", "癒し", "夜景", "イルミネーション", "テーマパーク", "美術館", "フォトジェニック", "ホテル・旅館"].each do |scene| %>
      <label>
        <%= check_box_tag 'sample_form[scenes][]', scene,nil %>
        <%= scene %>&nbsp;&nbsp;&nbsp;
      </label>
    <% end %>
    <hr>
    <% ["ランチ", "ディナー", "カフェ", "バー", "居酒屋", "スイーツ", "食べ歩き"].each do |scene| %>
      <label>
        <%= check_box_tag 'sample_form[scenes][]', scene,nil %>
        <%= scene %>&nbsp;&nbsp;&nbsp;
      </label>
    <% end %>
    <hr>
    <% ["クリスマス","春", "夏", "秋", "冬"].each do |scene| %>
      <label>
        <%= check_box_tag 'sample_form[scenes][]', scene,nil %>
        <%= scene %>&nbsp;&nbsp;&nbsp;
      </label>
    <% end %>
    <br>
  <%= submit_tag "検索", :class => "btn btn-default btn-sm pull-right" %>
<% end %>
</div>
</div>
 
</main>

<script>
document.addEventListener("DOMContentLoaded", function (event) {
  navbarToggleSidebar();
  navActivePage();
});
</script>

