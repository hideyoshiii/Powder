		        <div class="home-box">
			        <div class="home-box-1">
			        	
			        		<div class="radio-city000">	
				        		<%= radio_button_tag(:scene, "クール", true, {:id => "cool"}) %>
				        		<label for="cool">
						            <%= image_tag "cool00.jpg", :class =>'img-scene' %>
				        		</label>
			        		</div>
			        	
			        	<div class="lunch-info">
					        クール
					    </div>
			        </div>
			        <div class="home-box-1">
		        		<div class="radio-city000">	
			        		<%= radio_button_tag(:scene, "カジュアル", false, {:id => "casual"}) %>
			        		<label for="casual">
					            <%= image_tag "casual00.jpg", :class =>'img-scene' %>
			        		</label>
		        		</div>
			        	<div class="lunch-info">
					        カジュアル
					    </div>
			        </div>
			        <div class="home-box-1">
		        		<div class="radio-city000">	
			        		<%= radio_button_tag(:scene, "ユニーク", false, {:id => "unique"}) %>
			        		<label for="unique">
					            <%= image_tag "unique00.jpg", :class =>'img-scene' %>
			        		</label>
		        		</div>
			        	<div class="lunch-info">
					        ユニーク
					    </div>
			        </div>
		      	</div>
			    <div class="text-center" style="padding:50px 0px;">
					<%= submit_tag "コースを作成する", :class => "btn btn-default" %>
				</div>
			</div>
		<% end %>
	</div>
</div>

