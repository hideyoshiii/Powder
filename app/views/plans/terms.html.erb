<div class="pc_1">
	<div class="box87" id=''>
		<%= form_tag(seeks_outcome_path, method: :get) do %>
			<%= hidden_field_tag :city, params[:city] %>
			<div style="padding:0px 15px;">
				<div style="height:60px;"></div>
				<p class="text-center" style="color:white;">条件を絞りましょう</p>
				<%# 時間帯 %>
				<h4 style="color:#CCCCCC;padding:0px 0px 0px 10px;font-size:17px;"><span style="font-size:24px;">1</span>,&nbsp;Timezone</h4>
				<div class="home-box">
					<div class="home-box-1">
			  			<div class="radio-city00"> 
			              <%= radio_button_tag(:timezone, "noon", true, {:id => "lunch"}) %>
			              <label for="lunch">
				            <i class="fas fa-sun"></i>
		        		  </label>
			            </div>
			            <div class="lunch-info">
			              ランチから
			            </div>
		            </div>
		            <div class="home-box-1">
			  			<div class="radio-city00"> 
			              <%= radio_button_tag(:timezone, "night", false, {:id => "dinner"}) %>
			              <label for="dinner">
				            <i class="fas fa-moon"></i>
		        		  </label>
			            </div>
			            <div class="lunch-info">
			              ディナーから
			            </div>
		            </div>
		        </div>
		        <%# 予算 %>
				<h4 style="color:#CCCCCC;padding:0px 0px 5px 10px;font-size:17px;"><span style="font-size:24px;">2</span>,&nbsp;Budget</h4>
		  		<div class="home-box">
		  			<div class="home-box-1">
			  			<div class="radio-city0"> 
			              <%= radio_button_tag(:budget, "1", true, {:id => "one"}) %>
			              <label for="one">
				            <i class="fas fa-yen-sign"></i>
		        		  </label>
			            </div>
			            <div class="lunch-info">
			              Bronze
			            </div>
		            </div>
		            <div class="home-box-1">
			  			<div class="radio-city0"> 
			              <%= radio_button_tag(:budget, "2", false, {:id => "two"}) %>
			              <label for="two">
				            <i class="fas fa-yen-sign"></i><i class="fas fa-yen-sign"></i>
		        		  </label>
			            </div>
			            <div class="lunch-info">
			              Silver
			            </div>
		            </div>
		            <div class="home-box-1">
			  			<div class="radio-city0"> 
			              <%= radio_button_tag(:budget, "3", false, {:id => "three"}) %>
			              <label for="three">
				            <i class="fas fa-yen-sign"></i><i class="fas fa-yen-sign"></i><i class="fas fa-yen-sign"></i>
		        		  </label>
			            </div>
			            <div class="lunch-info">
			              Gold
			            </div>
		            </div>   
		     	</div>
		     	<%# シーン %>
