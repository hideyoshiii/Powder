<%= render "partial/navbar3" %>

<mains class="" id="main-collapse">


<% if !@spots.blank? %>

<%= form_tag(demos_result_path, method: :get) do %>

<%= hidden_field_tag :spot1, @spot1.id %>

<h3 class="text-center">どっちの<%= @scene %>にする？</h3>	


<% @spots.each do |spot| %>
<div class="radio-city1">	
<% @n = @n + 1 %>
<% if @n == 1 %>	
<%= radio_button_tag(:spot2, spot.id, true) %>
<% else %>
<%= radio_button_tag(:spot2, spot.id) %>
<% end %>
<label for="spot2_<%= spot.id %>">
  <%= image_tag spot.pictures.first.image.url, :class =>'img-course-result' %>
  <h3><%= spot.title %><br><span style="font-size:14px;text-shadow: 0px 0px 0px black;"><i class="fa fa-map-marker" aria-hidden="true"></i><%= spot.station %></span></h3> 
  <%= link_to spot_path(spot) do %>
	  <h4>
	  	<i class="fa fa-info-circle" aria-hidden="true"></i>
	  </h4>
  <% end %>
</label>
</div>
<% end %>

<div class="dinner-box">
<div class="text-center change-btn">
<a href="javascript:;" onclick="koshin()" class=""><i class="fa fa-refresh"></i>&nbsp;Cange</a>
</div>
<div class="col-xs-12">
<div class="text-center">
<%= submit_tag "コースを確定する", :class => "btn btn-default" %>
</div>
</div>		
</div>


<% end %>

<% else %>
該当するスポットがありません
<% end %>

<script>
//更新
function koshin(){
	$('body,html').animate({
  scrollTop: 0},0);

  location.reload();
}
</script>


</main>

<script>
document.addEventListener("DOMContentLoaded", function (event) {
  navbarToggleSidebar();
  navActivePage();
});
</script>

