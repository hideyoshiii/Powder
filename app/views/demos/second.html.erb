<%= render "partial/navbar3" %>

<mains class="" id="main-collapse">

<%= @spot1.title %>

<% if !@spots.blank? %>

<%= form_tag(demos_result_path, method: :get) do %>

<%= hidden_field_tag :spot1, @spot1.id %>

<% @spots.each do |spot| %>
<div class="radio-city1">	
<%= radio_button_tag(:spot2, spot.id) %>
<label for="spot2_<%= spot.id %>">
  <%= image_tag spot.pictures.first.image.url, :class =>'img-course-result' %>
  <h3><%= spot.title %><br><span style="font-size:14px;"><i class="fa fa-map-marker" aria-hidden="true"></i><%= spot.station %></span></h3> 
</label>
</div>
<% end %>

<div class="dinner-box">
<a href="javascript:;" onclick="koshin()" class="btn btn-default"><i class="fa fa-refresh"></i>&nbsp;Cange</a>
<%= submit_tag "確定", :class => "btn btn-default" %>
</div>

<% end %>

<% else %>
該当するスポットがありません
<% end %>

<script>
//更新
function koshin(){
	$('body,html').animate({
  scrollTop: 0},0);

  location.reload();
}
</script>


</main>

