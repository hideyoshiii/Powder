<%= render "partial/navbar" %>
<mains class="" id="main-collapse">

<%= form_tag(demos_lunch_path, method: :get) do %>

  <div class="box98" id=''>
  	<div>
  		<h4 class="box-top1" style="color:white;text-shadow: 1px 1px 2px black;">まずはランチのお店を決めましょう。</h4>
  	</div>
  	<br>
  	<div>
  		<h3 class="box-top" style="color:white;text-shadow: 1px 1px 2px black;">どこでランチをしますか？</h3>
  	</div>
  	<div class="horizontal_scroll_search">
	  <ul class="scroll_lst_search">
	    <li class="scroll_item_search">
	        <span class="radio-city">	
			 	<%= radio_button_tag(:city_lunch, "恵比寿・代官山・中目黒", false, {:id => "ebisu", :onclick => "$('html,body').animate({scrollTop: $( '#section1' ).get( 0 ).offsetTop}, 700, 'swing');"}) %>
				<%= label_tag('ebisu', "恵比寿・代官山・中目黒") %>
			</span>
	    </li>
	    <li class="scroll_item_search">
	        <span class="radio-city">	
			 	<%= radio_button_tag(:city_lunch, "渋谷", false, {:id => "shibuya", :onclick => "$('html,body').animate({scrollTop: $( '#section1' ).get( 0 ).offsetTop}, 700, 'swing');"}) %>
				<%= label_tag('shibuya', "渋谷") %>
			</span>
	    </li>
	    <li class="scroll_item_search">
	        <span class="radio-city">	
			 	<%= radio_button_tag(:city_lunch, "原宿・表参道・青山", false, {:id => "harajuku", :onclick => "$('html,body').animate({scrollTop: $( '#section1' ).get( 0 ).offsetTop}, 700, 'swing');"}) %>
				<%= label_tag('harajuku', "原宿・表参道・青山") %>
			</span>
	    </li>
	    <li class="scroll_item_search">
	        <span class="radio-city">	
			 	<%= radio_button_tag(:city_lunch, "新宿", false, {:id => "shinjuku", :onclick => "$('html,body').animate({scrollTop: $( '#section1' ).get( 0 ).offsetTop}, 700, 'swing');"}) %>
				<%= label_tag('shinjuku', "新宿") %>
			</span>
	    </li>
	    <li class="scroll_item_search">
	        <span class="radio-city">	
			 	<%= radio_button_tag(:city_lunch, "東京・丸の内・日本橋", false, {:id => "tokyo", :onclick => "$('html,body').animate({scrollTop: $( '#section1' ).get( 0 ).offsetTop}, 700, 'swing');"}) %>
				<%= label_tag('tokyo', "東京・丸の内・日本橋") %>
			</span>
	    </li>
	  </ul>
	</div>
  </div>

  <div class="box97" id='section1'>
  	<h3 class="box-top" style="color:white;text-shadow: 1px 1px 2px black;">予算はいくらにしますか？</h3>
  	<br>
  	<div class="col-xs-10">
		<input id="price_lunch" name="price_lunch" type="range" value="2000" min="1" max="4000" step="1"
	  	oninput="document.getElementById('output1').value=this.value">
	  	<div class="pull-right">
			<span class="rage-output">~</span><output id="output1" class="rage-output">2000</output><span class="rage-output">円</span>
		</div>
	</div>
	<h1><%= submit_tag "次へ進む", :class => "btn btn-default" %></h1>
  </div>

<% end %>


<script>
//更新
function scroll(){
	var n = window.location.href.slice(window.location.href.indexOf('?') + 4);
    var p = $("section1").offset().top;
    $('html,body').animate({ scrollTop: p }, 'slow');
    return false;
}
</script>


</mains>

