<%= render "partial/navbar" %>

<mains class="" id="main-collapse">

<% if !@spots.blank? %>	

	<%= form_tag(demos_search2_path, method: :get) do %>
	<%= hidden_field_tag :city_dinner, params[:city_dinner] %>
	<%= hidden_field_tag :price_dinner, params[:price_dinner] %>
	<%= hidden_field_tag :small_dinner, params[:small_dinner] %>
	<%= hidden_field_tag :distance, 1 %>

		<h4 class="text-center" style="margin-top:20px;">どのお店にしますか？</h4>	

		<% @spots.each do |spot| %>
			<% @n = @n + 1 %>
			<div class="radio-city1">
				<% if @n == 1 %>	
					<%= radio_button_tag(:spot1, spot.id, true) %>
				<% else %>
					<%= radio_button_tag(:spot1, spot.id) %>
				<% end %>
				<label for="spot1_<%= spot.id %>">
			  		<%= image_tag spot.pictures.first.image.url, :class =>'img-course-result' %>
			  		<h3>
			  			<%= spot.title %><br><span style="font-size:14px;text-shadow: 0px 0px 0px black;"><i class="fa fa-map-marker" aria-hidden="true"></i><%= spot.station %></span>
			  		</h3> 
			  		<a href="" data-toggle="modal" data-target="#myModal<%= @n %>">
		        	  <h4>
		        	  	<i class="fa fa-info-circle" aria-hidden="true"></i>
		        	  </h4>
		          </a>
				</label>
			</div>
			<!-- モーダルウィンドウの中身 -->
		      <div class="modal fade" id="myModal<%= @n %>">
		        <div class="modal-dialog">
		          <br>
		          <%# 横スクロール写真 %>
		          <div class="horizontal_scroll_wrap_content_spot">
		            <ul class="scroll_lst_content">
		              <% @pictures = spot.pictures.order(id: "ASC") %>
		              <% @pictures.each do |picture| %>
		                <li class="scroll_item_content">
		                  <div class="scroll_item_inr_content">
		                    <div class="scroll_item_thum_content">
		                      <%# $$$spotから利用する写真をfitstなどで指定 %>
		                      <%= image_tag picture.image.url(), :class =>'img-scroll_content' %>
		                    </div>
		                    <div class="scroll_item_info_content_quote">
		                      <p class="scroll_item_ttl_content_quote pull-right">
		                        <% if !picture.url.blank? %>
		                          <% if !picture.quote.blank? %>
		                            <a href="<%= picture.url %>" target="_blank" class="gray">
		                              出典&nbsp;<%= picture.quote %>
		                            </a>
		                          <% else %> 
		                            <a href="<%= picture.url %>" target="_blank" class="gray">
		                              出典&nbsp;
		                            </a>
		                          <% end %>
		                        <% else %> 
		                            &nbsp;
		                        <% end %>  
		                      </p>
		                    </div>
		                 </div>
		                </li>
		              <% end %>  
		            </ul>
		          </div>
		          <div class="panel-body">
		            <%# タイトル %>
		            <div class="title-spot-show"><%= spot.title %></div>
		            <%# 都道府県、エリア %>
		            <p style="color: #CCCCCC;margin-top:5px;">
		              <i class="fa fa-map-marker" aria-hidden="true"></i><%= spot.city %>&nbsp;&nbsp;[<%= spot.station %>]
		            </p> 
		            <br>
		            <%# 見出し %>
		            <% unless spot.heading.blank? %>
		              <p class="aaa"><%= spot.heading %></p>
		            <% end %>
		            <%# Description %>
		            <% unless spot.description.blank? %>
		              <p><%= spot.description %></p>
		            <% end %>
		            <%# 食べログ、rettyボタン等 %>
		            <h4 style="margin:40px 0px 0px;">For your infomation</h4>
		            <div class="info-box1">
		              <% unless spot.tabelog.blank? %>
		                <a href="<%= spot.tabelog %>" target="_blank" class="raise2"><%= image_tag "tabelog.png", :style =>'width:20px;height:auto;' %>食べログで見る</a>
		              <% end %>
		              <% unless spot.retty.blank? %>
		                <a href="<%= spot.retty %>" target="_blank" class="raise3"><i class="fa fa-cutlery"></i>&nbsp;Rettyで見る</a>
		              <% end %>
		            </div>
		            <button type="button" class="btn btn-default pull-right" data-dismiss="modal">×&nbsp;閉じる</button>
		          </div>  
		        </div>
		      </div>
		<% end %>

		<div class="dinner-box change-btn">	
			<div class="col-xs-12">
				<div class="text-center">
					<a href="javascript:;" onclick="koshin()" class=""><i class="fa fa-refresh"></i>&nbsp;Change</a>&nbsp;&nbsp;
					<a href='#section4' class="btn btn-default">次へ進む</a>
				</div>
			</div>	
		</div>

		<div class="box5" id='section4'>
	  		<h3 style="color:white;text-shadow: 1px 1px 2px black;">
	  			<div class="text-center">
	  				この後はどうしますか？
	  			</div>
	  		</h3>
	  		<div class="row radio-box">
	  			<div class="col-xs-4 col-sm-4 col-md-4">
	  				<div class="text-center">
	  					<span class="img_radio1">	
		 					<%= radio_button_tag(:large, "バー", true, {:id => "bar"}) %>
							<%= label_tag('bar', "バー") %>
						</span>
					</div>
				</div>
				<div class="col-xs-4 col-sm-4 col-md-4">
					<div class="text-center">
						<span class="img_radio2">	
				  			<%= radio_button_tag(:large, "夜カフェ", false, {:id => "cafe"}) %>
							<%= label_tag('cafe', "夜カフェ") %> 
						</span>
					</div>
				</div>
				<div class="col-xs-4 col-sm-4 col-md-4">
					<div class="text-center">
						<span class="img_radio0">	
							<%= radio_button_tag(:large, "２軒目なし", false, {:id => "not"}) %>
							<%= label_tag('not', "２軒目なし") %> 
						</span>
					</div>
				</div>
			</div>
	  		<div>
				<h1><%= submit_tag "SEARCH", :class => "btn btn-default" %></h1>
			</div>
	  </div>
	   
	<% end %>

<% else %>
	該当するスポットがありません
<% end %>


<script>
//更新
function koshin(){
	$('body,html').animate({
  scrollTop: 0},0);

  location.reload();
}
</script>


</mains>

