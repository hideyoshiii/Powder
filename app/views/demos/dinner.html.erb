<%= render "partial/navbar3" %>

<mains class="" id="main-collapse">

<%= form_tag(demos_search2_path, method: :get) do %>

<% @spots.each do |spot| %>
<div class="radio-city1">	
<%= radio_button_tag(:spot1, spot.id) %>
<label for="spot1_<%= spot.id %>">
  <%= image_tag spot.pictures.first.image.url, :class =>'img-course-result' %>
  <h3><%= spot.title %><br><span style="font-size:14px;"><i class="fa fa-map-marker" aria-hidden="true"></i><%= spot.station %></span></h3> 
  <%= link_to spot_path(spot) do %>
	  <h4>
	  	<i class="fa fa-info-circle" aria-hidden="true"></i>
	  </h4>
  <% end %>
  
</label>
</div>
<% end %>

<div class="dinner-box">
<div class="text-center change-btn">
<a href="javascript:;" onclick="koshin()" class=""><i class="fa fa-refresh"></i>&nbsp;Cange</a>
</div>
<div class="col-xs-6">
<div class="text-center">
<%= submit_tag "コースを確定する", :class => "btn btn-default" %>
</div>
</div>	
<div class="col-xs-6">
<div class="text-center">
<a href='#section4' class="btn btn-default">２軒目を選ぶ</a>
</div>
</div>	
</div>

<div class="box5" id='section4'>
	  	<h3 style="color:white;text-shadow: 1px 1px 2px black;">２軒目は？</h3>
	  	<div class="row radio-box">
	  	<div class="col-xs-4 col-sm-4 col-md-4">
	  	<div class="text-center">
	  	<span class="img_radio1">	
		 	<%= radio_button_tag(:large, "バー", true) %>
			<%= label_tag('large_バー', "バー") %>
		</span>
		</div>
		</div>
		<div class="col-xs-4 col-sm-4 col-md-4">
		<div class="text-center">
		<span class="img_radio2">	
		  	<%= radio_button_tag(:large, "カフェ") %>
			<%= label_tag('large_カフェ', "カフェ") %> 
		</span>
		</div>
		</div>
		<div class="col-xs-4 col-sm-4 col-md-4">
		<div class="text-center">
		<span class="img_radio0">	
			<%= radio_button_tag(:large, "２軒目なし", true) %>
