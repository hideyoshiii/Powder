<% set_meta_tags noindex: true %>
<%= render "partial/navbar" %>
<mains class="" id="main-collapse">

	<%# ライン %>
    <div class="box-line">
    
        <p class="text-center" style="margin:20px 0px;">以下の内容をコピーしてショーンにお伝えください。</p>
        <p style="margin:20px 20px;">
        	①エリア&nbsp;&nbsp;<%= params[:area] %><br>
        	②時間帯&nbsp;&nbsp;<%= params[:timezone] %><br>
        	③予算&nbsp;&nbsp;<%= params[:price_min] %>~<%= params[:price_max] %>円<br>
        	④詳細条件&nbsp;&nbsp;<%= params[:term] %></p> 
        <div class="text-center" style="margin:20px 0px;">
          <button class="btn btn-default" data-clipboard-text="①<%= params[:area] %>&#13;②<%= params[:timezone] %>&#13;③<%= params[:price_min] %>~<%= params[:price_max] %>円&#13;④<%= params[:term] %>"><i class="fa fa-clone"></i>コピー</button>
        </div>
        <div  class="text-center">
          <a href="https://line.me/R/ti/p/%40zjy4954t" target="_blank">
          <%= image_tag "line.jpg", :class =>'img-circle profile-line' %>
          <br>
          <h4>ショーン&nbsp;<span style="font-size:14px;">LINEを起動する</span></h4>
          </a>
        </div>
     
       
    </div>
    
</mains>


<script>
  var clipboard = new Clipboard('.btn');
  clipboard.on('success', function(e) {
    console.info('Trigger:', e.trigger);
    alert('コピーできました');
  });
  clipboard.on('error', function(e) {
    console.error('Trigger:', e.trigger);
    alert('このブラウザでは対応していません');
  });
</script>