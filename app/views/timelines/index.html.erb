<% unless @timelines.blank? %>

<% @timelines.each do |timeline| %>
<% course = Course.find(timeline.course_id) %>
<% @points = Point.where(course_id: course.id).order(id: "ASC") %>
<%= link_to timeline_path(timeline) do %>
	<div class="timeline-title-box">
		<div class="timeline-title">
			<% if course.user.sex == "男" %>
				<%= image_tag "male.png", :class =>'img-circle profile-0' %>&nbsp;<%= course.user.nickname %>(<%= course.user.age %>)がコースを作成しました。
			<% end %>
			<% if course.user.sex == "女" %>
				<%= image_tag "female.png", :class =>'img-circle profile-0' %>&nbsp;<%= course.user.nickname %>(<%= course.user.age %>)がコースを作成しました。
			<% end %>
			<div class="pull-right">
				<% copy_count = Copy.where(course_id: course.id).count %>
				<span style="color:#808080;"><i class="fa fa-copy"></i>&nbsp;<%= copy_count %>コピー</span>
			</div>
		</div>
	</div>
	<div class="timeline-terms-box">
		<% unless timeline.price_dinner.blank? %>
			<div class="timeline-terms">
				<span class="dinner_btn"><span style="color:;"><i class="fa fa-moon"></i></span>ディナー</span>&nbsp;<%= timeline.city_dinner %>/~<%= timeline.price_dinner %>円/<%= timeline.small_dinner %>
			</div>
		<% end %>  
		<% unless timeline.price_lunch.blank? %>
			<div class="timeline-terms">
				<span class="lunch_btn"><span style="color:;"><i class="fa fa-sun"></i></span>ランチ</span>&nbsp;<%= timeline.city_dinner %>/~<%= timeline.price_dinner %>円/<%= timeline.small_dinner %>
			</div>
		<% end %> 
	</div>
	<div class="horizontal_scroll_wrap_coures">
	<ul class="scroll_lst_coures">
	  <%# 横スクロールコンテンツ %>
	  <% @points.each do |point| %>
	  <li class="scroll_item_coures">
	    <div class="scroll_item_inr_coures">
	      <div class="scroll_item_thum_coures">
	        <%# $$$spotから利用する写真をfitstなどで指定 %>
	        <%= image_tag point.spot.pictures.first.image.url, :class =>'img-scroll_coures' %>
	      </div>
	      <div class="scroll_item_info_coures_quote">
	        <p class="scroll_item_ttl_coures_quote spot-show-p">
	      		<%= point.spot.title %>
	        </p>
	      </div>
	   </div>
	  </li>
	  <% end %>  
	</ul>
	</div>
	<br>
<% end %>  
<% end %> 

<% end %>  

<script>
  $(function () {
    $('.radio-timeline').on('click', function(event) {
      // 既定の動作をキャンセル(今回はinputにcheckedが入るのをキャンセル)
      event.preventDefault();
      
      // チェック済みの場合はチェックを外し、未チェックの場合はチェックを入れる
      var $input = $(this).find('input');
      $input.prop('checked', !$input.prop('checked'));
    });
  });
</script>


