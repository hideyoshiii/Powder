<%= render "partial/navbar" %>
<mains class="" id="main-collapse">

<div class="panel-body">

<%= form_tag(timelines_search_path, method: :get) do %>
	<% if params[:city_dinner].blank? %>
		<%= select_tag :city_dinner, options_for_select([["恵比寿・代官山・中目黒","恵比寿・代官山・中目黒"],["渋谷","渋谷"],["原宿・表参道・青山","原宿・表参道・青山"],["新宿","新宿"]]), {prompt:"選択してください"} %>
	<% else %>
		<%= select_tag :city_dinner, options_for_select([["恵比寿・代官山・中目黒","恵比寿・代官山・中目黒"],["渋谷","渋谷"],["原宿・表参道・青山","原宿・表参道・青山"],["新宿","新宿"]]), {:selected => params[:city_dinner]} %>
	<% end %> 
	<% if params[:price_dinner].blank? %>
		<%= select_tag :price_dinner, options_for_select([["~4000円/人",4000],["~6000円/人",6000],["~8000円/人",8000]]), {prompt:"選択してください"} %>
	<% else %>
		<%= select_tag :price_dinner, options_for_select([["~4000円/人",4000],["~6000円/人",6000],["~8000円/人",8000]]), {:selected => params[:price_dinner]} %>
	<% end %>
	<% if params[:small_dinner].blank? %>
		<%= select_tag :small_dinner, options_for_select([["指定しない","指定しない"],["和食","和食"],["焼肉・ホルモン","焼肉・ホルモン"],["ステーキ・ハンバーグ","ステーキ・ハンバーグ"],["鍋","鍋"],["フレンチ","フレンチ"],["イタリアン","イタリアン"],["西洋各国料理","西洋各国料理"],["中華料理","中華料理"],["アジア・エスニック","アジア・エスニック"],["その他","その他"]]), {prompt:"選択してください"} %>
	<% else %>
		<%= select_tag :small_dinner, options_for_select([["指定しない","指定しない"],["和食","和食"],["焼肉・ホルモン","焼肉・ホルモン"],["ステーキ・ハンバーグ","ステーキ・ハンバーグ"],["鍋","鍋"],["フレンチ","フレンチ"],["イタリアン","イタリアン"],["西洋各国料理","西洋各国料理"],["中華料理","中華料理"],["アジア・エスニック","アジア・エスニック"],["その他","その他"]]), {:selected => params[:small_dinner]} %>
	<% end %>
	<%= submit_tag "SEARCH", :class => "btn btn-default btn-sm" %>
<% end %>  

</div>
		
<% unless @timelines.blank? %>

<% @timelines.each do |timeline| %>
<% course = Course.find(timeline.course_id) %>
<% @points = Point.where(course_id: course.id).order(id: "ASC") %>
<%= link_to timeline_path(timeline) do %>
	<div class="timeline-title-box">
		<div class="timeline-title">
			<%= image_tag "male.png", :class =>'img-circle profile-0' %>&nbsp;<%= course.user.nickname %>(<%= course.user.age %>)がコースを作成しました。
			<div class="pull-right">
				<% copy_count = Copy.where(course_id: course.id).count %>
				<span style="color:#808080;"><i class="fa fa-copy"></i>&nbsp;<%= copy_count %>コピー</span>
			</div>
		</div>
	</div>
	<div class="timeline-terms-box">
		<% unless timeline.price_dinner.blank? %>
			<div class="timeline-terms">
				<span class="dinner_btn"><span style="color:;"><i class="fa fa-moon"></i></span>ディナー</span>&nbsp;<%= timeline.city_dinner %>/~<%= timeline.price_dinner %>円/<%= timeline.small_dinner %>
			</div>
		<% end %>  
		<% unless timeline.price_lunch.blank? %>
			<div class="timeline-terms">
				<span class="lunch_btn"><span style="color:;"><i class="fa fa-sun"></i></span>ランチ</span>&nbsp;<%= timeline.city_dinner %>/~<%= timeline.price_dinner %>円/<%= timeline.small_dinner %>
			</div>
		<% end %> 
	</div>
	<div class="horizontal_scroll_wrap_coures">
	<ul class="scroll_lst_coures">
	  <%# 横スクロールコンテンツ %>
	  <% @points.each do |point| %>
	  <li class="scroll_item_coures">
	    <div class="scroll_item_inr_coures">
	      <div class="scroll_item_thum_coures">
	        <%# $$$spotから利用する写真をfitstなどで指定 %>
	        <%= image_tag point.spot.pictures.first.image.url, :class =>'img-scroll_coures' %>
	      </div>
	      <div class="scroll_item_info_coures_quote">
	        <p class="scroll_item_ttl_coures_quote spot-show-p">
	      		<%= point.spot.title %>
	        </p>
	      </div>
	   </div>
	  </li>
	  <% end %>  
	</ul>
	</div>
	<br>
<% end %>  
<% end %> 

<% end %>  


</mains>
<%= render "partial/footer" %>

