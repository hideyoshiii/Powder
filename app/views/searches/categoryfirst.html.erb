<%= render "partial/navbar" %>
<mains class="" id="main-collapse">

<%= form_tag(searches_first_path, method: :get) do %>
　<%= hidden_field_tag :timezone, params[:timezone] %>

  <div class="box98" id=''>
  	<div>
  		<% if params[:timezone] == "昼" %>
  			<h4 class="box-top1" style="color:white;text-shadow: 1px 1px 2px black;">まずはランチのお店を決めましょう。</h4>
  		<% end %>
  		<% if params[:timezone] == "夜" %>
  			<h4 class="box-top1" style="color:white;text-shadow: 1px 1px 2px black;">まずはランチのお店を決めましょう。</h4>
  		<% end %>
  	</div>
  	<br>
  	<div>
  		<% if params[:timezone] == "昼" %>
  			<h3 class="box-top" style="color:white;text-shadow: 1px 1px 2px black;">どこでランチをしますか？</h3>
  		<% end %>
  		<% if params[:timezone] == "夜" %>
  			<h3 class="box-top" style="color:white;text-shadow: 1px 1px 2px black;">どこでディナーをしますか？</h3>
  		<% end %>
  	</div>
  	<div class="horizontal_scroll_search">
	  <ul class="scroll_lst_search">
	    <li class="scroll_item_search">
	        <span class="radio-city">	
			 	<%= radio_button_tag(:city, "恵比寿・代官山・中目黒", true, {:id => "ebisu", :onclick => "$('html,body').animate({scrollTop: $( '#section1' ).get( 0 ).offsetTop}, 700, 'swing');"}) %>
				<%= label_tag('ebisu', "恵比寿・代官山・中目黒") %>
			</span>
	    </li>
	    <li class="scroll_item_search">
	        <span class="radio-city">	
			 	<%= radio_button_tag(:city, "渋谷", false, {:id => "shibuya", :onclick => "$('html,body').animate({scrollTop: $( '#section1' ).get( 0 ).offsetTop}, 700, 'swing');"}) %>
				<%= label_tag('shibuya', "渋谷") %>
			</span>
	    </li>
	    <li class="scroll_item_search">
	        <span class="radio-city">	
			 	<%= radio_button_tag(:city, "原宿・表参道・青山", false, {:id => "harajuku", :onclick => "$('html,body').animate({scrollTop: $( '#section1' ).get( 0 ).offsetTop}, 700, 'swing');"}) %>
				<%= label_tag('harajuku', "原宿・表参道・青山") %>
			</span>
	    </li>
	    <li class="scroll_item_search">
	        <span class="radio-city">	
			 	<%= radio_button_tag(:city, "新宿", false, {:id => "shinjuku", :onclick => "$('html,body').animate({scrollTop: $( '#section1' ).get( 0 ).offsetTop}, 700, 'swing');"}) %>
				<%= label_tag('shinjuku', "新宿") %>
			</span>
	    </li>
	    <li class="scroll_item_search">
	        <span class="radio-city">	
			 	<%= radio_button_tag(:city, "東京・丸の内・日本橋", false, {:id => "tokyo", :onclick => "$('html,body').animate({scrollTop: $( '#section1' ).get( 0 ).offsetTop}, 700, 'swing');"}) %>
				<%= label_tag('tokyo', "東京・丸の内・日本橋") %>
			</span>
	    </li>
	  </ul>
	</div>
  </div>

  <div class="box97" id='section1'>
  	<% if params[:timezone] == "昼" %>
	  	<h4 class="box-top" style="color:white;text-shadow: 1px 1px 2px black;">ランチの予算はいくらにしますか？</h4>
	  	<br>
	  	<div class="col-xs-10">
			<input id="price" name="price" type="range" value="2000" min="1000" max="5000" step="1000"
		  	oninput="document.getElementById('output1').value=this.value, document.getElementById('output2').value=this.value - 999">
		  	<div class="pull-right">
		  		<output id="output2" class="rage-output">1001</output>
				<span class="rage-output">~</span><output id="output1" class="rage-output">2000</output><span class="rage-output">円</span>
			</div>
		</div>
	<% end %>
	<% if params[:timezone] == "夜" %>
	  	<h4 class="box-top" style="color:white;text-shadow: 1px 1px 2px black;">ディナーの予算はいくらにしますか？</h4>
	  	<br>
	  	<div class="col-xs-10">
			<input id="price" name="price" type="range" value="4000" min="3000" max="10000" step="1000"
		  	oninput="document.getElementById('output1').value=this.value,  document.getElementById('output2').value=this.value - 1999">
		  	<div class="pull-right">
		  		<output id="output2" class="rage-output">2001</output>
				<span class="rage-output">~</span><output id="output1" class="rage-output">4000</output><span class="rage-output">円</span>
			</div>
		</div>
	<% end %>
	<h1><%= submit_tag "次へ進む", :class => "btn btn-default" %></h1>
  </div>


<% end %>


<script>
//更新
function scroll(){
	var n = window.location.href.slice(window.location.href.indexOf('?') + 4);
    var p = $("section1").offset().top;
    $('html,body').animate({ scrollTop: p }, 'slow');
    return false;
}
</script>


</mains>

