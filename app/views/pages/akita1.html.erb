<%= render "partial/navbar" %>

<main class="" id="main-collapse">

<span class="title-content">
  <% if params[:tag].nil? %>
    [秋田]のスポット
  <% else %>
    [秋田]<%= [@tag] %>のスポット
  <% end %>
</span> 
<hr class="style1">

<%= form_tag(search_akita1_path, method: :get) do %>
  タグを絞る=><%= text_field_tag :tag %>
  <%= submit_tag "検索", :class => "" %>
<% end %>
<br>

<div class="hero-full-wrapper">
  <div class="grid">
    <div class="gutter-sizer"></div>
    <div class="grid-sizer"></div>
    <% if @arrlistings  %>
      <% @arrlistings.each do |spot| %>
        <div class="grid-item iii">
          <%= link_to spot_path(spot) do %>
          <% if spot.article_id %>
            <div class="index-movie">
            <%= image_tag spot.pictures[0].image.url, :class =>'img-responsive' %>
            <p><i class="fa fa-play-circle-o" aria-hidden="true"></i></p> 
            </div>
          <% else %>
            <%= image_tag spot.pictures[0].image.url, :class =>'img-responsive' %>
          <% end %>
            <div class="black title-font-index">
              <%= spot.title %>
            </div>
            <div class="prefecture-font-index">
              <i class="fa fa-map-marker" aria-hidden="true"></i><%= spot.prefecture %>
            </div>
          <% end %>
          <%# wantdoneボタン %>
          <span id="like-of-<%= spot.id %>">
            <%= render partial: 'likes/like', locals: { spot: spot, likes: @likes } %>
          </span>
        </div>    
      <% end %>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function (event) {
     masonryBuild();
  });
</script>
 
</main>

<script>
document.addEventListener("DOMContentLoaded", function (event) {
  navbarToggleSidebar();
  navActivePage();
});
</script>

