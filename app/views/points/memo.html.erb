<%= render "partial/navbar3" %>
<main class="" id="main-collapse">

<div class="container">
	<div class="row">
		<br>
		<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
			<%= form_tag("/points/#{@point.id}/update", method: :post) do %>
				<% if @memo.blank? %>
					<%= text_area_tag :memo, '', placeholder: "メモを入力", class: "form-control" %>
				<% else %>
					<%= text_area_tag :memo, @memo, placeholder: "メモを入力", class: "form-control" %>
				<% end %>
				<br>
				<%= submit_tag "保存する", :class => "btn btn-default pull-right" %>
			<% end %>
		</div>
	</div>

</div>


 
</main>
<%= render "partial/footer" %>

<script>
document.addEventListener("DOMContentLoaded", function (event) {
  navbarToggleSidebar();
  navActivePage();
});
</script>

