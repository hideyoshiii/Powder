<%= render "partial/navbar" %>
<main class="" id="main-collapse">

<div class="container">
	<div class="row">
		<br>
		<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-body">	
					<div class="title-content">
					  デートスポットを編集する
					</div> 
					<hr class="style1">		
					<!-- ここからフォーム -->
					<%= form_for @spot do |f| %>


						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>title</label>
                                <%= f.text_field :title, placeholder: "スポットの名称", class: "form-control", required: "true" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>大カテゴリー</label>
                                <br>   
								    <% ["ランチ", "ディナー", "バー", "昼カフェ", "夜カフェ", "公園", "ミュージアム", "ショップ", "食べ歩き", "夜景", "昼アクティブ", "夜アクティブ", "昼その他", "夜その他"].each do |large| %>
								    <label>
								      <%= f.check_box :large, { multiple: true},large,nil %>
								      <%= large %>
								    </label>
								    <% end %>	  
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>小カテゴリー</label>
                                <br>   
								    <% ["和食", "焼肉・ホルモン", "ステーキ・ハンバーグ", "鍋", "フレンチ", "イタリアン", "西洋各国料理", "中華料理", "アジア・エスニック", "その他"].each do |small| %>
								    <label>
								      <%= f.check_box :small, { multiple: true},small,nil %>
								      <%= small %>
								    </label>
								    <% end %>	  
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-4 select">
								<div class="form-group">
                                <label>ランチ</label>
                                ~<%= f.number_field :price_lunch, min:0, max:50000 %>円
                            	</div>
							</div>
							<div class="col-md-4 select">
								<div class="form-group">
                                <label>ディナー</label>
                                ~<%= f.number_field :price_dinner, min:0, max:50000 %>円
                            	</div>
							</div>
							<div class="col-md-4 select">
								<div class="form-group">
                                <label>その他</label>
                                ~<%= f.number_field :price_spot, min:0, max:50000 %>円
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>price</label>
                                <%= f.text_area :price, rows: 2, placeholder: "料金について", class: "form-control" %>
                            </div> 
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label>prefecture</label>
									<%= f.select :prefecture, [["北海道","北海道"], ["青森","青森"], ["岩手","岩手"], ["宮城","宮城"], ["秋田","秋田"], ["山形","山形"], ["福島","福島"], ["茨城","茨城"], ["栃木","栃木"], ["群馬","群馬"], ["埼玉","埼玉"], ["千葉","千葉"], ["東京","東京"], ["神奈川","神奈川"], ["新潟","新潟"], ["富山","富山"], ["石川","石川"], ["福井","福井"], ["山梨","山梨"], ["長野","長野"], ["岐阜","岐阜"], ["静岡","静岡"], ["愛知","愛知"], ["三重","三重"], ["滋賀","滋賀"], ["京都","京都"], ["大阪","大阪"], ["兵庫","兵庫"], ["奈良","奈良"], ["和歌山","和歌山"], ["鳥取","鳥取"], ["島根","島根"], ["岡山","岡山"], ["広島","広島"], ["山口","山口"], ["徳島","徳島"], ["香川","香川"], ["愛媛","愛媛"], ["高知","高知"], ["福岡","福岡"], ["佐賀","佐賀"], ["長崎","長崎"], ["熊本","熊本"], ["大分","大分"], ["宮崎","宮崎"],["鹿児島","鹿児島"],["沖縄","沖縄"],["海外","海外"], ["家","家"]], {prompt:"選択してください"}, {required: 'true', class: 'form-control'} %>
								</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label>city</label>
									<%= f.select :city, [["恵比寿・代官山・中目黒","恵比寿・代官山・中目黒"],["渋谷","渋谷"],["原宿・表参道・青山","原宿・表参道・青山"],["新宿","新宿"],["東京・丸の内・日本橋","東京・丸の内・日本橋"]], {prompt:"選択してください"}, {required: 'true', class: 'form-control'} %>
								</div>
							</div>
						</div>
						<br>	

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>station</label>
                                <%= f.text_field :station, placeholder: "最寄駅", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>	

			            <div class="row">
			              <div class="col-md-12 select">
			                <div class="field">
			                  <%= f.label :label_list, "tag" %><br>
			                  <%= text_field_tag 'spot[label_list]', @spot.label_list.join(','), "data-role" => "tagsinput" %>
			                </div>
			              </div>
			            </div>
			            <br>

			            <hr>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>tabelog</label>
                                <%= f.text_field :tabelog, placeholder: "食べログのURL", class: "form-control" %>
                            	</div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>Retty</label>
                                <%= f.text_field :retty, placeholder: "RettyのURL", class: "form-control" %>
                            	</div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>instagram</label>
                                <%= f.text_field :introduction, placeholder: "インスタグラムのURL", class: "form-control" %>
                            	</div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>browser</label>
                                <%= f.text_field :browser, placeholder: "公式サイトのURL", class: "form-control" %>
                            	</div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>address</label>
                                <%= f.text_field :address, placeholder: "住所", class: "form-control" %>
                            	</div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>phone</label>
                                <%= f.text_field :phone, placeholder: "電話番号(半角ハイフンなし)", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="actions">
							<%= f.submit "保存", class: "btn btn-primary pull-right" %>
						</div>	

						<br><br><hr>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>heading</label>
                                <%= f.text_field :heading, placeholder: "見出し", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>description</label>
                                <%= f.text_area :description, rows: 7, placeholder: "説明", class: "form-control" %>
                            </div> 
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>A.Dateポイント①</label>
                                <%= f.text_area :point1, rows: 3, placeholder: "A.Dateポイント①", class: "form-control" %>
                            </div> 
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>A.Dateポイント②</label>
                                <%= f.text_area :point2, rows: 3, placeholder: "A.Dateポイント②", class: "form-control" %>
                            </div> 
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>A.Dateポイント③</label>
                                <%= f.text_area :point3, rows: 3, placeholder: "A.Dateポイント③", class: "form-control" %>
                            </div> 
							</div>
						</div>
						<br>

						<div class="actions">
							<%= f.submit "保存", class: "btn btn-primary pull-right" %>
						</div>	

						<br><br><hr>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>月曜日</label>
                                <%= f.text_field :monday, placeholder: "8am~10:30pm", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>火曜日</label>
                                <%= f.text_field :tuesday, placeholder: "8am~10:30pm", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>水曜日</label>
                                <%= f.text_field :wednesday, placeholder: "8am~10:30pm", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>木曜日</label>
                                <%= f.text_field :thursday, placeholder: "8am~10:30pm", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>金曜日</label>
                                <%= f.text_field :friday, placeholder: "8am~10:30pm", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>土曜日</label>
                                <%= f.text_field :saturday, placeholder: "8am~10:30pm", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>日曜日</label>
                                <%= f.text_field :sunday, placeholder: "8am~10:30pm", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>祝日</label>
                                <%= f.text_field :holiday, placeholder: "8am~10:30pm", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>アクセス</label>
                                <%= f.text_field :access, placeholder: "東急東横線代官山駅より徒歩3分", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>支払い方法</label>
                                <%= f.text_field :payment, placeholder: "カード可  （VISA、MASTER、AMEX）", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>サービス料</label>
                                <%= f.text_field :service, placeholder: "なし", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>チャージ</label>
                                <%= f.text_field :charge, placeholder: "ディナータイムのみコペルト（パン代、席料）として、300円/人", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>禁煙・喫煙</label>
                                <%= f.text_field :smoking, placeholder: "完全禁煙  同施設内に喫煙所あり。", class: "form-control" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="pull-left btn btn-default btn-sm">
							<%= link_to("/spots/#{@spot.id}/destroy", {method: "post"}) do %>
							<span style="color:red;">投稿を削除</span>
							<% end %>
						</div>
						

						<div class="actions">
							<%= f.submit "保存", class: "btn btn-primary pull-right" %>
						</div>	
						
					<% end %>
				</div>
			</div>
		</div>
	</div>

</div>


 
</main>

<script>
document.addEventListener("DOMContentLoaded", function (event) {
  navbarToggleSidebar();
  navActivePage();
});
</script>

