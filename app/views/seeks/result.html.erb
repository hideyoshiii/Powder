  var map;
var marker = [];
var infoWindow = [];
var markerData = [ // マーカーを立てる場所名・緯度・経度

<% if @spot_n == 1 %>
  {
       name: "<%= @spot1.title %>",
       lat: <%= @spot1.latitude %>,
