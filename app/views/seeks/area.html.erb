<%= render "partial/navbar" %>
<mains class="" id="main-collapse">

<%= form_tag(seeks_category_path, method: :get) do %>
	<%= hidden_field_tag :price_min , params[:price_min] %>
	<%= hidden_field_tag :price_max , params[:price_max] %>
	<%= hidden_field_tag :distance_on, params[:distance_on] %>
	<%= hidden_field_tag :distance, params[:distance] %>
	<%= hidden_field_tag :timezone, params[:timezone] %>
	<%= hidden_field_tag :small, params[:small] %>
	<% unless params[:spot1].blank? %>
		<%= hidden_field_tag :spot1, params[:spot1] %>
	<% end %>
	<% unless params[:spot2].blank? %>
		<%= hidden_field_tag :spot2, params[:spot2] %>
	<% end %>


  <div class="box98" id=''>
  	<div>
  		<h4 class="box-top1" style="color:white;text-shadow: 1px 1px 2px black;">まずはエリアを決めましょう。</h4>
  	</div>
  	<br>
  	<div>
  		<h4 class="box-top" style="color:white;text-shadow: 1px 1px 2px black;">どこでデートをしますか？</h4>
  	</div>
  	<br>
  	<div class="box-city">
  		<span class="radio-city"> 
          <%= radio_button_tag(:city, "すべてのエリア", true, {:id => "all"}) %>
          <%= label_tag('all', "すべてのエリア") %>
        </span>
  		<span class="radio-city">	
		 	<%= radio_button_tag(:city, "恵比寿・代官山・中目黒", false, {:id => "ebisu"}) %>
			<%= label_tag('ebisu', "恵比寿・代官山・中目黒") %>
		</span>
		<span class="radio-city">	
		 	<%= radio_button_tag(:city, "原宿・表参道・青山", false, {:id => "harajuku"}) %>
			<%= label_tag('harajuku', "原宿・表参道・青山") %>
		</span>
		<span class="radio-city">	
		 	<%= radio_button_tag(:city, "渋谷", false, {:id => "shibuya"}) %>
			<%= label_tag('shibuya', "渋谷") %>
		</span>
		<span class="radio-city">	
		 	<%= radio_button_tag(:city, "東京・丸の内・日本橋", false, {:id => "tokyo"}) %>
			<%= label_tag('tokyo', "東京・丸の内・日本橋") %>
		</span>
		<span class="radio-city">	
		 	<%= radio_button_tag(:city, "新宿", false, {:id => "shinjuku"}) %>
			<%= label_tag('shinjuku', "新宿") %>
		</span>
		<span class="radio-city">	
		 	<%= radio_button_tag(:city, "六本木・麻布・赤坂", false, {:id => "roppongi"}) %>
			<%= label_tag('roppongi', "六本木・麻布・赤坂") %>
		</span>
  	</div>
  	<h1><%= submit_tag "次へ進む", :class => "btn btn-default" %></h1>
  </div>

<% end %>


</mains>

