<%= render "partial/navbar3" %>
<main class="" id="main-collapse">

<div class="panel-body">
	<div class="title-content3">
	  コースを編集
	  <%= link_to course_path(@course) do %>
		<h4 class="pull-right btn btn-default btn-sm">完了</h4>	
　　　　<% end %>
	</div> 
	<hr class="style3">
</div>	
	
	<div class="hero-full-wrapper">
	  <div class="grid">
	    <div class="gutter-sizer"></div>
	    <div class="grid-sizer"></div>
	    <% @points.each do |point| %>
	      <div class="grid-item iii">
	          <%= image_tag point.spot.pictures.first.image.url, :class =>'img-responsive' %>
	          <div class="black title-font-index">
	            <%= point.spot.title %>
	          </div>
	          <div class="text-center">
	          	<%= link_to("/points/#{point.id}/destroy", {method: "post"}) do %>
		          	<div class="">
		          		削除
		          	</div>
	          	<% end %>
	          </div>
	          <br>
	      </div>
	    <% end %>  
	    <div class="grid-item iii">
		    <%= link_to("/courses/#{@course.id}/points/new", {method: "get"}) do %>
	          <%= image_tag "plus.png", :class =>'img-plus' %>
	        <% end %>
	    </div>

	  </div>
	</div>

	<br>

	<div class="pull-left btn btn-default btn-sm">
		<%= link_to("/courses/#{@course.id}/destroy", {method: "post"}) do %>
		<span style="color:red;">コースを削除</span>
		<% end %>
	</div>
						

	<br><br>

<script>
  document.addEventListener("DOMContentLoaded", function (event) {
     masonryBuild();
  });
</script>



</main>
<%= render "partial/footer" %>

<script>
document.addEventListener("DOMContentLoaded", function (event) {
  navbarToggleSidebar();
  navActivePage();
});
</script>

