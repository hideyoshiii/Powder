<% set_meta_tags noindex: true %>
<%= render "partial/navbar2" %>
<main class="" id="main-collapse">

	<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="text-center">
						<span style="font-size:24px;">Question</span>
					</div>
				</div>

	<div class="panel-body">			
					<!-- ここからフォーム -->
					<%= form_for @question do |f| %>


						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label>scene</label>
									<%= f.select :category, [["誘う","誘う"], ["プラン","プラン"], ["当日","当日"], ["デート後","デート後"], ["メッセージ","メッセージ"], ["記念日・サプライズ","記念日・サプライズ"], ["その他","その他"]], {prompt:"場面を選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
								</div>
							</div>
						</div>
						<br>
					

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>content</label>
                                <%= f.text_area :content, rows: 4, placeholder: "質問を記入してください", class: "form-control", required: "true" %>
                            </div> 
							</div>
						</div>
						<br>

						<div class="row">
			            <div class="col-md-12 select">
			              <div class="form-group">
			                <label>photo&nbsp;※もしあれば</label>
			            <div class="field">
			              <%= f.file_field :photo %>
			            </div>
			            </div>
			            </div>
			            </div>
			            <br>

			            <%= f.hidden_field :sex, value: current_user.sex %>
					

						<div class="actions">
							<%= f.submit "Save", class: "btn btn-danger" %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>

</div>


 
</main>

<script>
document.addEventListener("DOMContentLoaded", function (event) {
  navbarToggleSidebar();
  navActivePage();
});
</script>

