<%= render "partial/navbar" %>
<main class="" id="main-collapse">

<div class="container">
	<div class="row">
		<br>
		<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-body">	
					<div class="title-content">
					  写真情報を編集する
					</div> 
					<hr class="style1">		
					<!-- ここからフォーム -->
					<%= form_for @picture do |f| %>

						<%= image_tag @picture.image.url(), :class =>'img-responsive' %> 
						<br><br>


						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>title</label>
                                <%= f.text_field :quote, placeholder: "引用元の名称", class: "form-control", required: "true" %>
                            	</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
                                <label>url</label>
                                <%= f.text_field :url, placeholder: "引用元のURL", class: "form-control", required: "true" %>
                            	</div>
							</div>
						</div>
						<br>

            
						<div class="pull-left btn btn-default btn-sm">
							<%= link_to("/pictures/#{@picture.id}/destroy2", {method: "post"}) do %>
							<span style="color:red;">写真を削除</span>
							<% end %>
						</div>
						

						<div class="actions">
							<%= f.submit "保存", class: "btn btn-primary pull-right" %>
						</div>	
						
					<% end %>
				</div>
			</div>
		</div>
	</div>

</div>


 
</main>

<script>
document.addEventListener("DOMContentLoaded", function (event) {
  navbarToggleSidebar();
  navActivePage();
});
</script>

