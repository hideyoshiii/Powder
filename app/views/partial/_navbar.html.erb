<header class="">
  <div class="navbar navbar-default navbar-fixed-top visible-xs top">
    <button type="button" class="navbar-toggle collapsed">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a href="/spots" class="navbar-brand">Powder<span style="font-size: 14px;">&nbsp;&nbsp;あなたのデートに彩りを</span></a>
  </div>

  <nav class="sidebar side">
    <div class="navbar-collapse" id="navbar-collapse">
      <div class="site-header hidden-xs">
          <a class="site-brand" href="/spots" title="">
            <h2>
              <%= image_tag 'mashup-logo.svg', :class =>'site-logo' %>
              Powder
            </h2>
          </a>
        <p style="font-weight: bold;">あなたのデートに彩りを</p>
      </div>
      <ul class="nav">
        <% if (user_signed_in?) %>

        
          
        
        
        <li>
          <%= link_to search_tokyo98_path do %>
          <i class="fa fa-building" aria-hidden="true"></i> 東京で探す
          <% end %>
        </li>

        <li>
          <%= link_to search_prefecture_path do %>
          <i class="fa fa-map-marker" aria-hidden="true"></i> エリアから探す
          <% end %>
        </li>

        <li>
          <%= link_to search_scenes_path do %>
          <i class="fa fa-area-chart" aria-hidden="true"></i> 場面から探す
          <% end %>
        </li>
        
        <li>
          <%= link_to search_tags_path do %>
          <i class="fa fa-tag" aria-hidden="true"></i> タグから探す
          <% end %>
        </li>

        <li>
          <%= link_to new_spot_path do %>
          <i class="fa fa-plus-circle" aria-hidden="true"></i> <span style="font-size: 13px;">デートスポットを投稿する</span>
          <% end %>
        </li>

        <% end %>

      </ul>

      <nav class="nav-footer">
        <% if (user_signed_in?) %>
        <input type="checkbox" id="switch1" value="/articles" onclick="location.href=this.value" class='switch'>
          <label for="switch1"></label>
          <br><br>
        <%= link_to user_path(current_user) do %>
        <%= image_tag current_user.image, :class => "img-circle profile-4" %>
        &nbsp;&nbsp;<%= current_user.nickname %>
        <% end %>
        <br>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        <br>
        <% else %>
        <%= link_to "アカウント作成", new_user_registration_path %>
        <br>
          <%= link_to "ログイン", new_user_session_path %>
          <br>
        <% end %>

        
        
        <p class="nav-footer-social-buttons">
          <a class="fa-icon" href="https://www.instagram.com/powder.date/" target="_blank">
            <i class="fa fa-instagram"></i>
          </a>
          <a class="fa-icon" href="/" target="_blank">
            <i class="fa fa-facebook" aria-hidden="true"></i>
          </a>
          <a class="fa-icon" href="/" target="_blank">
            <i class="fa fa-twitter"></i>
          </a>
        </p>
      </nav>  
    </div> 
  </nav>
</header>