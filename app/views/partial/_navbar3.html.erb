<header class="">
  <div class="navbar navbar-default navbar-fixed-top visible-xs top1">
    <button type="button" class="navbar-toggle collapsed">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a href="/articles" class="navbar-brand navbar-brand-center">Powder</a>
  </div>

  <nav class="sidebar">
    <div class="navbar-collapse" id="navbar-collapse">
      <div class="site-header hidden-xs">
          <a class="site-brand" href="/articles" title="">
            <h2>
              <%= image_tag 'mashup-logo.svg', :class =>'site-logo' %>
              Powder
            </h2>
          </a>
        <p style="font-weight: bold;">あなたのデートに彩りを</p>
      </div>
      <ul class="nav">
        <% if (user_signed_in?) %>

          <li>
          <%= link_to search_articles_scenes_path do %>
          <i class="fa fa-film" aria-hidden="true"></i> シーンから探す
          <% end %>
        </li>

          <li>
            <%= link_to search_articles_tags_path do %>
              <i class="fa fa-tag" aria-hidden="true"></i> タグから探す
            <% end %>
          </li>

          <% if current_user.authority == "manager" %>
            <li>
            <%= link_to new_article_path do %>
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i> 動画記事を投稿する
            <% end %>
          </li>
          <% end %>

        <% end %>

        

      </ul>

      <nav class="nav-footer">
        <% if (user_signed_in?) %>
        <input type="checkbox" id="switch1" checked/ value="/spots" onclick="location.href=this.value" class='switch'>
        <label for="switch1"></label>
        <br>
        <span style="color:black;">&nbsp;&nbsp;looking by movie now</span>
        <br><br>
        <%= link_to user_path(current_user) do %>
        <%= image_tag current_user.image, :class => "img-circle profile-4" %>
        &nbsp;&nbsp;<%= current_user.nickname %>
        <% end %>
        <br>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out" aria-hidden="true"></i> ログアウト
          <% end %>
        <br>
        <% else %>
        <%= link_to new_user_registration_path do %>
          <i class="fa fa-user-plus" aria-hidden="true"></i> アカウント作成
          <% end %>
        <br>
          <%= link_to new_user_session_path do %>
          <i class="fa fa-sign-in" aria-hidden="true"></i> ログイン
          <% end %>
        <br>
        <% end %>

        
        
        <br>
        <p class="nav-footer-social-buttons">
          <a class="fa-icon" href="https://www.instagram.com/powder.date/" target="_blank">
            <i class="fa fa-instagram"></i>
          </a>
          <a class="fa-icon" href="/" target="_blank">
            <i class="fa fa-facebook" aria-hidden="true"></i>
          </a>
          <a class="fa-icon" href="/" target="_blank">
            <i class="fa fa-twitter"></i>
          </a>
          <a class="fa-icon" href="/" target="_blank">
            <i class="fa fa-pinterest" aria-hidden="true"></i>
          </a>
        </p>
      </nav>  
    </div> 
  </nav>
</header>